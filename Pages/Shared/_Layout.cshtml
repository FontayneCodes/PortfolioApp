<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fontayne Porter</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="site-wrapper">

        <video id="gold-shimmer-bg"
               autoplay
               muted
               loop
               playsinline
               preload="auto"
               disablepictureinpicture
               controlslist="nodownload nofullscreen noremoteplay"
               style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; object-fit: cover; z-index: -1; pointer-events: none;">
            <source src="@Url.Content("~/videos/gold-shimmer.mp4")" type="video/mp4" />
        </video>







        <!-- HEADER NAV -->
        <header style="padding: 20px; background-color: #000; text-align: center;">
            <nav>
                <a href="/" style="margin: 0 15px;">Home</a>
                <a href="/Projects" style="margin: 0 15px;">Projects</a>
                <a href="/About" style="margin: 0 15px;">About</a>
                <a href="/Contact" style="margin: 0 15px;">Contact</a>
            </nav>
        </header>

        <!-- MAIN CONTENT -->
        <div class="container">
            @RenderBody()
        </div>

        <!-- FOOTER -->

        <footer class="portfolio-footer">
            <p>
                Designed with clarity. Coded with confidence.<br />
                <span class="signature">Signed, Fontayne Porter.</span>
                &copy; @DateTime.Now.Year Fontayne Porter. All rights reserved.
            </p>
        </footer>

    </div>

</body>
</html>

